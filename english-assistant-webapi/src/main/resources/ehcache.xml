<?xml version="1.0" encoding="UTF-8"?>
<ehcache xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="http://www.ehcache.org/ehcache.xsd"
         updateCheck="true"
         monitoring="autodetect"
         dynamicConfig="true">

    <!--    <cache name="cacheOfWorld"
               maxElementsInMemory="150"
               eternal="false"  &lt;!&ndash; устанавливается является ли элементы вечными &ndash;&gt;
        overflowToDisk="false" &lt;!&ndash; могут ли элементы перейти на диск, когда кэш в памяти достигла установленного предела &ndash;&gt;
        timeToLiveSeconds="300" &lt;!&ndash; период времени по умолчанию для существования элемента с даты его создания &ndash;&gt;
        timeToIdleSeconds="0" &lt;!&ndash; Задает время простоя для элемента до истечения срока его действия. &ndash;&gt;
        memoryStoreEvictionPolicy="LFU" &lt;!&ndash; Устанавливается способ исключения элемента из кэша &ndash;&gt;
        transactionalMode="off" &lt;!&ndash;Представляет, является ли кэш транзакционным или нет &ndash;&gt;
    </cache>-->

